  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "types"],
    "noEmit": true,
    // "plugins": [
    //   {
    //     "name": "nexus/typescript-language-service"
    //   }
    // ]
  },
  "include": [
    "src",
    "types/*"
  ]
}
